@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="author" content="Douglas Collioni" />

    <link rel="shortcut icon" href="/favicon.ico">
    <link href='http://fonts.googleapis.com/css?family=Open+Sans' rel='stylesheet' type='text/css'>

    <title>Graduare</title>

    @using System.Web.Optimization

    @Styles.Render("~/Content/css/login")
</head>
<body>
    <header>
        <img src="@Url.Content("~")Content/images/graduare-header.png" alt="Graduare logo">
    </header>
    <div id="login-box">
        <h1>Login</h1>
        <hr>
        <div id="form">
            <form action="@Url.Content("~")User/Login" method="post">
                <div>
                    <input type="text" name="email" placeholder="E-mail" class="user" autofocus="autofocus">
                </div>
                <div>
                    <input type="password" name="password" placeholder="Senha" class="password">
                </div>
                <div>
                    <input type="submit" value="Entrar">
                </div>
            </form>
        </div>
    </div>
</body>
</html>